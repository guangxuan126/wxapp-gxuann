/* pages/about/about.wxss */

.UCenter-bg {
  background-image: url(https://oss.gxuann.cn/wxapp-gxuann/author-cover.jpeg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #333333;
  text-shadow: 0 0 3px rgba(255, 255, 255, 0.3);
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

.pro-grid{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 80%;
  margin: 100rpx 10% 10%;
  background: #fff;
  border-radius: 20rpx;
}
.pro-grid-item{
  flex: 0 0 auto;
  width: 33.3%;
  text-align: center;
  color: #333333;
  padding: 40rpx 0;
  font-size: 25rpx;
}
.pro-grid-img{
  height: 40rpx;
  width: 40rpx;
}